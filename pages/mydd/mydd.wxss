/* pages/mydd/mydd.wxss */
@import '../../static/default.wxss';
.yuesaodiv{
  margin:0;
  height:320rpx;
}
.yuesaodiv .name{
  flex:1;
  font-size:35rpx;
}
.yuesaodiv .ysbz{
  flex:9;
}
.yuesaodiv .ysbz image{
  width:60%;
  margin-top:10rpx;
}
.ddtit{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  color:#888;
  padding:0 20rpx;
  text-align: left;
  box-sizing: border-box;
  font-size:30rpx;
  margin-top:-30rpx;
}
.yuesaodiv .ddtype{
  width:100%;
  height:50rpx;
  line-height:50rpx;
  text-align: center;
}
.yuesaodiv .ddtype .tip{
  width:120rpx;
  height:30rpx;
  line-height:30rpx;
  font-size:20rpx;
  border-radius:30rpx;
  border:1px solid #fa9c28;
  color:#fa9c28;
  float:right;
}
.paytype{
  width:100%;
  height:45rpx;
  line-height:45rpx;
  color:#888;
  font-size:25rpx;
}
.paytype text{
  color:#ef524b;
  font-size:35rpx;
}
.paytype.mart{
  margin-top:10rpx;
}
.yuesaodiv .right{
  padding-left:20rpx;
  box-sizing: border-box;
}
.ddtoopdiv{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  border-top:1px solid #e0e0e0;
  border-bottom:1px solid #e0e0e0;
  color:#000;
  background:#fff;
  padding:0 20rpx;
  box-sizing: border-box;
  font-size:30rpx;
}
.ddtoopdiv .ddson{
  width:50%;
  height:100%;
  float:left;
  text-align: left;
}
.ddtoopdiv .ddson:nth-child(2){
  text-align: right;
}
.ddtoopdiv2{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  border-bottom:1px solid #e0e0e0;
  color:#000;
  background:#fff;
  box-sizing: border-box;
  font-size:30rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  margin-bottom:30rpx;
}
.ddtoopdiv2 .button,.ddtoopdiv2 .button2{
  background:#fff;
  color:#000;
  flex:3;
  text-align: center;
}
.ddtoopdiv2 .button2{
  background:#3CC51F;
  color:#fff;
  flex:4;
}

.ddtoopdiv2 .button:nth-child(1){
  border-right:1px solid #e0e0e0;
}
.ddtit:nth-child(1){
  margin-top:0;
}
.waitpay .yuesaodiv .tip{
  border-color:#f85050;
  color:#f85050;
}

.waitwork .yuesaodiv .tip{
  border-color:#30d9b0;
  color:#30d9b0;
}
.waitwork .button2{
  background:#fff;
  color:#b3b3b3;
  border-left:1px solid #e0e0e0;
}
.done .yuesaodiv .tip{
  border-color:#30d9b0;
  color:#30d9b0;
}
.done .button2{
  background:#24dab2;
  color:#fff;
}
.done .button:nth-child(2){
  color:#afafaf;
}