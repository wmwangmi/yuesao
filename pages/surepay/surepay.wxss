/* pages/surepay/surepay.wxss */
@import '../../static/default.wxss';
page{
  padding-bottom:100rpx;
}
.dtt:nth-child(1){
  margin-top:0;
}
.conk .line .right.aliright{
  text-align: right;
}
.conk .line .left{
  flex:7;
  position: relative;
}
.conk .line .right{
  flex:3;
  position: relative;
}
.conk .line .left.clored,.conk .line .right.clored{
  color:#ff1401;
}
.weixpay{
  width:80%;
  height:auto;
  overflow: visible;
  padding:20rpx 0;
  color:#8b8b8b;
  float:right;
  display: flex;
  justify-content: center;
  flex-flow: row nowrap;
  position: relative;
}
.weixpay .imgdiv{
  flex:3;
}
.weixpay .wendiv{
  flex:7;
  display: flex;
  justify-content: center;
  flex-flow: column nowrap;
}
.weixpay .wendiv view:nth-child(1){
  font-size:35rpx;
  margin-bottom:20rpx;
}
.weixpay .wendiv view:nth-child(2){
  font-size:25rpx;
}
.weixpay .imgdiv image{
  width:80%;
}
.weixpay::after{
  content: ' ';
  position: absolute;
  left:-120rpx;
  top:50%;
  transform: translateY(-50%);
  width:60rpx;
  height:60rpx;
  border:1px solid #d0d0d0;
  background:#e2e2e2;
  border-radius:5rpx;
}
.weixpay::before{
  content: ' ';
  width:20rpx;
  height:35rpx;
  border-right:6rpx solid #afafaf;
  border-bottom:6rpx solid #afafaf;
  position: absolute;
  transform: translateY(-50%) rotate(45deg);
  left:-102rpx;
  top:48%;
  z-index: 1;
}
.conk .line .left.addquan,.conk .line .left.addquan2{
  text-indent: 2em;
}
.conk .line .left.addquan::after,.conk .line .left.addquan2::after{
  content: ' ';
  width:30rpx;
  height:30rpx;
  border:2rpx solid #e3e3e3;
  border-radius:100%;
  position: absolute;
  left:0;
  top:50%;
  transform: translateY(-50%);
}
 .conk .line .left.addquan2::after{
  background:#8741bd;
  border:2rpx solid #8741bd;
}
.conk .line .left.addquan2::before{
  content: ' ';
  width:10rpx;
  height:20rpx;
  border-right:6rpx solid #fff;
  border-bottom:6rpx solid #fff;
  transform: translateY(-50%) rotate(45deg);
  position: absolute;
  z-index:1;
  left:12rpx;
  top:50%;
} 
