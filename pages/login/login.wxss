/* pages/login/login.wxss */
@import '../../static/default.wxss';
.tishi{
  width:100%;
  height:auto;
  overflow:hidden;
  line-height:50rpx;
  text-align: left;
  padding:10rpx;
  color:#929292;
  font-size:25rpx;
}
.inputdiv{
  width:100%;
  border-top:1px solid #e2e2e2;
  border-bottom:1px solid #e2e2e2;
  background:#fff;
  text-align: center;
}
.inputdiv .son{
  width:90%;
  height:70rpx;
  line-height: 70rpx;
  display: flex;
  margin:0 auto;
  flex-grow: row;
  padding:10rpx 0;
  font-size:30rpx;
}
.inputdiv .son .left{
  flex:3;
  color:#000;
}
.inputdiv .son .right{
  flex:7;
}
.inputdiv .son .right input{
  width:100%;
  height:100%;
  font-size:25rpx;
  text-align: left;
}
.plcla{
  color:#808080;
}
.inputdiv .son:nth-child(1){
  border-bottom:1px solid #d9d9d9;
}
.inputdiv .son:nth-child(2) .right .inputdiv{
  width:60%;
  height:100%;
  float:left;
  border:0;
}
.inputdiv .son:nth-child(2) .right .inputdiv input{
  width:100%;
  height:100%;
  border:0;
}
.inputdiv .son .right .button{
  width:40%;
  height:100%;
  font-size:30rpx;
  text-align: center;
  background:#3CC51F;
  color:#fff;
  float:right;
}
.tjiao{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  background:#3CC51F;
  color:#fff;
  text-align: center;
  font-size:25rxp;
  margin-top:20rpx;
}